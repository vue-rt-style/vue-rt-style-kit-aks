.conference
  background-color b2c-cool-grey05-no-opacity
  min-height 100vh
  position relative
  padding-top 50px
  &-auth
    position relative
    height 100vh
    background-color b2c-white
    &__image
      position absolute
      height 100%
      width 50%
      top 0
      left 0
      right auto
      bottom 0
      background-repeat no-repeat
      background-image url('/static/images/B2B/1694215804.png')
      background-size cover
    &__content
      display flex
      flex-direction column
      justify-content space-between
      height 100%
  &-header
    box-shadow 0 0 5px 0 rgba(main-color, .2)
    font-size 16px
    line-height 18px
    background-color b2c-white
    &__inner
      display flex
      flex-direction row
      align-items flex-end
      justify-content space-between
    &__navigation
      margin-left 80px
      &-item
        //font-size 16px
        //line-height 18px
        color main-color05
        &+&
          margin-left 40px
        &--active
          color main-color
          text-shadow 0 0 .1px main-color
    &__person
      margin-left 80px
      display flex
      flex-direction row
      align-items center
      margin-bottom -3px
    &__phone,
    &__name
      font-size 14px
      display flex
      color main-color07-no-opacity
      &-icon
        margin-right 10px
    &__name
      margin-left 40px
      &-inner
        max-width 134px
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        display inline-block
    &__settings-icon
      margin-left 40px
      cursor pointer
    &__exit-icon
      margin-left 14px
      cursor pointer
  &-footer
    padding 20px 0
    background-color main-color07-no-opacity
    display flex
    flex-direction row
    justify-content space-between
    font-size 14px
    line-height 18px
    &__top
      padding-bottom 20px
      border-bottom 2px solid b2c-white03
      display flex
      flex-direction row
      justify-content space-between
    &__help-link
      color b2c-white
      align-self center
    &__bottom
      padding-top 20px
      display flex
      flex-direction row
      justify-content space-between
    &__about-icon
      margin-left 7px
    &__phone
      margin-left 40px
      font-size 18px
  &__list,
  &__archive
    &--empty
      background-color b2c-white
      text-align center
      padding 80px 0
      border-radius 10px
      box-shadow 0 0 5px 0 rgba(main-color, .2)
      margin-top 12px
    &-icon
      margin-bottom 20px
  &__input-wrapper
    margin-right 20px
  &__content-wrapper
    min-height calc(100vh - 217px)
  &__phonebook
    background-color b2c-white
    text-align left
    border-radius 10px
    box-shadow 0 0 5px 0 rgba(main-color, .2)
    margin-top 10px
    &--empty
      padding 80px 0
      text-align center
    &__item
      position relative
      &+.conference__phonebook__item
        &:before
          content ''
          position absolute
          size(calc(100% - 80px), 2px)
          background-color b2c-cool-grey
          left 60px
          top -1px
          right 20px
      .row+.row
        &:before
          content ''
          position absolute
          size(calc(100% - 100px), 2px)
          background-color b2c-cool-grey
          left 70px
          top -1px
          right 30px
      &-bottom-part
        max-height 0
        transition max-height .2s linear, padding .2s linear
        overflow hidden
        padding 0
      &--active
        .conference__phonebook__item-bottom-part
          max-height 150px
          padding 24px 0
  &__archive
    &--start
      background-color b2c-white
      text-align center
      padding 80px 0
      border-radius 10px
      box-shadow 0 0 5px 0 rgba(main-color, .2)
      margin-top 12px

